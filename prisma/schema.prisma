
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// TworzÄ™ model user do bazy postgreSQL
model User {
  id        Int    @id @default(autoincrement())
  name      String
  vorname   String?

  userLogin UserLogin?
  refreshToken RefreshToken[]
}

model UserLogin {
  id       Int    @id @default(autoincrement())
  password String
  email    String @unique
  userId   Int    @unique

  user     User   @relation(fields: [userId], references: [id])

}

model RefreshToken {
  id        Int   @id @default(autoincrement())
  userId    Int
  tokenHash String 
  expiresAt DateTime
  createdAt DateTime
  revokedAt DateTime

  user      User  @relation(fields: [userId], references: [id])
}