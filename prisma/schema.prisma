
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// TworzÄ™ model user do bazy postgreSQL
model User {
  id           Int    @id @default(autoincrement())
  name         String
  vorname      String
  password     String
  email        String @unique

  refreshToken RefreshToken[]
  post         Post[]
}

model RefreshToken {
  id        Int   @id @default(autoincrement())
  userId    Int
  tokenHash String 
  expiresAt DateTime
  createdAt DateTime @default(now())
  revokedAt DateTime?

  user      User  @relation(fields: [userId], references: [id])
}

model Post {
  id        Int   @id @default(autoincrement())
  authorId  Int
  createdAt DateTime @default(now()) 

  user      User @relation (fields: [authorId], references: [id])
}